<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGreen"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="150dp"
                  android:orientation="vertical"
                  android:layout_weight="3"
                  tools:ignore="MissingConstraints"
                  tools:layout_editor_absoluteX="0dp">
        <TextView
                android:text="equation"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingRight="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="25sp"
                android:layout_gravity="end"
                android:id="@+id/equation_text"
                tools:ignore="MissingConstraints"/>

        <TextView
                android:text="Result"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingEnd="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="40sp"
                android:layout_gravity="end"
                android:id="@+id/result_text"
                tools:ignore="MissingConstraints"/>
    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:columnCount="4"
            app:rowCount="5">

        <Button
                android:text="="
                android:textColor="@color/white"
                android:layout_width="95dp"
                android:layout_height="160dp"
                app:layout_row="3"
                app:layout_column="3"
                app:layout_rowSpan="2"
                android:textSize="18sp"
                android:background="@drawable/rounded_button"
                android:onClick="equalOnClick"/>
        <Button
                android:text="/"
                android:layout_width="95dp"
                android:layout_height="80dp"
                app:layout_row="0"
                app:layout_column="1"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"
                android:onClick="divisionOnClick"/>
        <Button
                android:text="BACK"
                android:layout_width="95dp"
                android:layout_height="80dp"
                app:layout_row="0"
                app:layout_column="0"
                android:textSize="16sp"
                android:background="@drawable/rounded_button"
                android:onClick="backOnClick"/>
        <Button
                android:text="+/-"
                android:layout_width="95dp"
                android:layout_height="80dp"
                app:layout_row="4"
                app:layout_column="0"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"
                android:onClick="plusminusOnClick"/>
        <Button
                android:text=","
                android:layout_width="95dp"
                android:layout_height="80dp"
                app:layout_row="4"
                app:layout_column="2"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"
                android:onClick="dotOnClick"/>
        <Button
                android:text="x"
                android:layout_width="95dp"
                android:layout_height="80dp"
                app:layout_row="0"
                app:layout_column="2"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"
                android:onClick="multiplicationOnClick"/>
        <Button
                android:text="C"
                android:layout_width="95dp"
                android:layout_height="80dp"
                app:layout_row="0"
                app:layout_column="3"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"
                android:onClick="clearOnClick"/>
        <Button
                android:text="+"
                android:layout_width="95dp"
                android:layout_height="80dp"
                app:layout_row="2"
                app:layout_column="3"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"
                android:onClick="additionOnClick"/>
        <Button
                android:text="-"
                android:layout_width="95dp"
                android:layout_height="80dp"
                app:layout_row="1"
                app:layout_column="3"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"
                android:onClick="subtractionOnClick"/>
        <Button
                android:text="9"
                android:layout_width="95dp"
                android:layout_height="80dp"
                app:layout_row="1"
                app:layout_column="2"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"
                android:onClick="nineOnClick"/>
        <Button
                android:text="8"
                android:layout_width="95dp"
                android:layout_height="80dp"
                app:layout_row="1"
                app:layout_column="1"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"
                android:onClick="eightOnClick"/>
        <Button
                android:text="7"
                android:layout_width="95dp"
                android:layout_height="80dp"
                app:layout_row="1"
                app:layout_column="0"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"
                android:onClick="sevenOnClick"/>
        <Button
                android:text="6"
                android:layout_width="95dp"
                android:layout_height="80dp"
                app:layout_row="2"
                app:layout_column="2"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"
                android:onClick="sixOnClick"/>
        <Button
                android:text="5"
                android:layout_width="95dp"
                android:layout_height="80dp"
                app:layout_row="2"
                app:layout_column="1"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"
                android:onClick="fiveOnClick"/>
        <Button
                android:text="4"
                android:layout_width="95dp"
                android:layout_height="80dp"
                app:layout_row="2"
                app:layout_column="0"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"
                android:onClick="fourOnClick"/>
        <Button
                android:text="3"
                android:layout_width="95dp"
                android:layout_height="80dp"
                app:layout_row="3"
                app:layout_column="2"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"
                android:onClick="threeOnClick"/>
        <Button
                android:text="2"
                android:layout_width="95dp"
                android:layout_height="80dp"
                app:layout_row="3"
                app:layout_column="1"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"
                android:onClick="twoOnClick"/>
        <Button
                android:text="1"
                android:layout_width="95dp"
                android:layout_height="80dp"
                app:layout_row="3"
                app:layout_column="0"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"
                android:onClick="oneOnClick"/>
        <Button
                android:text="0"
                android:layout_width="95dp"
                android:layout_height="80dp"
                app:layout_row="4"
                app:layout_column="1"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"
                android:onClick="zeroOnClick"/>
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>