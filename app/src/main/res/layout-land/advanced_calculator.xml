<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGreen"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

    <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:columnCount="5"
            app:rowCount="6"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/gridLayout2">

        <Button
                android:text="+"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:id="@+id/bt_add"
                app:layout_row="3" app:layout_column="4"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="/"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:id="@+id/bt_div"
                app:layout_row="0" app:layout_column="3"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="BACK"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:id="@+id/bt_back"
                app:layout_row="0" app:layout_column="0"
                app:layout_columnSpan="2"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="3"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:id="@+id/button29"
                app:layout_row="4" app:layout_column="3"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="+/-"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:id="@+id/bt_pm"
                app:layout_row="5" app:layout_column="1"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="2"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:id="@+id/bt2"
                app:layout_row="4" app:layout_column="2"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text=","
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:id="@+id/bt_dot"
                app:layout_row="5" app:layout_column="3"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="x"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:id="@+id/bt_mlp"
                app:layout_row="1" app:layout_column="4"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="C"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:id="@+id/bt_clr"
                app:layout_row="0" app:layout_column="4"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="-"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:id="@+id/bt_sub"
                app:layout_row="2" app:layout_column="4"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="9"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:id="@+id/bt9"
                app:layout_row="2" app:layout_column="3"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="6"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:id="@+id/bt6"
                app:layout_row="3" app:layout_column="3"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="1"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:id="@+id/bt1"
                app:layout_row="4" app:layout_column="1"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="8"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:id="@+id/bt8"
                app:layout_row="2" app:layout_column="2"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="5"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:id="@+id/bt5"
                app:layout_row="3" app:layout_column="2"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="4"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:id="@+id/bt4"
                app:layout_row="3" app:layout_column="1"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="7"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:id="@+id/bt7"
                app:layout_row="2" app:layout_column="1"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="0"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:id="@+id/bt0"
                app:layout_row="5" app:layout_column="2"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="tan"
                android:layout_width="80dp"
                android:layout_height="55dp"
                app:layout_row="1" app:layout_column="3"
                android:id="@+id/bt_tan"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="sin"
                android:layout_width="80dp"
                android:layout_height="55dp"
                app:layout_row="1" app:layout_column="1"
                android:id="@+id/bt_sin"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="cos"
                android:layout_width="80dp"
                android:layout_height="55dp"
                app:layout_row="1" app:layout_column="2"
                android:id="@+id/bt_cos"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="ln"
                android:layout_width="80dp"
                android:layout_height="55dp"
                app:layout_row="2" app:layout_column="0"
                android:id="@+id/bt_ln"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="log"
                android:layout_width="80dp"
                android:layout_height="55dp"
                app:layout_row="1" app:layout_column="0"
                android:id="@+id/bt_log"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="x^2"
                android:layout_width="80dp"
                android:layout_height="55dp"
                app:layout_row="4" app:layout_column="0"
                android:id="@+id/bt_sqr"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="%"
                android:layout_width="80dp"
                android:layout_height="55dp"
                app:layout_row="0" app:layout_column="2"
                android:id="@+id/bt_perc"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="sqrt"
                android:layout_width="80dp"
                android:layout_height="55dp"
                app:layout_row="5" app:layout_column="0"
                android:id="@+id/bt_sqrt"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="="
                android:textColor="@color/white"
                android:layout_width="80dp"
                android:layout_height="110dp"
                app:layout_row="4" app:layout_column="4"
                app:layout_rowSpan="2"
                android:id="@+id/bt_equal"
                android:background="@drawable/rounded_button"/>
        <Button
                android:text="x^y"
                android:layout_width="80dp"
                android:layout_height="55dp"
                app:layout_row="3" app:layout_column="0"
                android:id="@+id/bt_pow"
                android:background="@drawable/rounded_button2"/>
    </androidx.gridlayout.widget.GridLayout>
    <TextView
            android:text="TextView"
            android:layout_width="250dp"
            android:layout_height="50dp" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="25dp"
            app:layout_constraintEnd_toStartOf="@+id/gridLayout2"/>
    <TextView
            android:text="TextView"
            android:layout_width="250dp"
            android:layout_height="80dp" android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toStartOf="@+id/gridLayout2"/>
</androidx.constraintlayout.widget.ConstraintLayout>