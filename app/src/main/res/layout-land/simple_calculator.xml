<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGreen"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_weight="3"
                  tools:ignore="MissingConstraints"
                  tools:layout_editor_absoluteX="0dp">

<!--        <TextView-->
<!--                android:text="TextView"-->
<!--                android:layout_width="260dp"-->
<!--                android:layout_height="50dp" app:layout_constraintStart_toStartOf="parent"-->
<!--                android:id="@+id/textView5"-->
<!--                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="25dp"-->
<!--                app:layout_constraintEnd_toStartOf="@+id/gridLayout"/>-->
<!--        <TextView-->
<!--                android:text="TextView"-->
<!--                android:layout_width="260dp"-->
<!--                android:layout_height="80dp"-->
<!--                android:id="@+id/textView6"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/textView5"-->
<!--                android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintEnd_toStartOf="@+id/gridLayout"/>-->
        <TextView
                android:text="equation"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingLeft="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="25sp"
                android:layout_gravity="end"
                android:id="@+id/equation_text"
                tools:ignore="MissingConstraints"/>

        <TextView
                android:text="Result"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:paddingLeft="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="40sp"
                android:layout_gravity="end"
                android:id="@+id/result_text"
                tools:ignore="MissingConstraints"/>
    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
            android:layout_width="375dp"
            android:layout_height="329dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:columnCount="4"
            app:rowCount="5" android:layout_marginTop="4dp" app:layout_constraintHorizontal_bias="0.996"
            android:id="@+id/gridLayout">

        <Button
                android:text="+"
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:id="@+id/bt_add"
                app:layout_row="2" app:layout_column="3"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="="
                android:textColor="@color/white"
                android:layout_width="95dp"
                android:layout_height="130dp"
                android:id="@+id/bt_equal"
                app:layout_row="3" app:layout_column="3"
                app:layout_rowSpan="2"
                android:textSize="18sp"
                android:background="@drawable/rounded_button"/>
        <Button
                android:text="/"
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:id="@+id/bt_div"
                app:layout_row="0" app:layout_column="1"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="BACK"
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:id="@+id/bt_back"
                app:layout_row="0" app:layout_column="0"
                android:textSize="16sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="3"
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:id="@+id/button29"
                app:layout_row="3" app:layout_column="2"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="+/-"
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:id="@+id/bt_pm"
                app:layout_row="4" app:layout_column="0"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="2"
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:id="@+id/bt2"
                app:layout_row="3" app:layout_column="1"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text=","
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:id="@+id/bt_dot"
                app:layout_row="4" app:layout_column="2"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="x"
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:id="@+id/bt_mlp"
                app:layout_row="0" app:layout_column="2"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="C"
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:id="@+id/bt_clr"
                app:layout_row="0" app:layout_column="3"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="-"
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:id="@+id/bt_sub"
                app:layout_row="1" app:layout_column="3"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="9"
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:id="@+id/bt9"
                app:layout_row="1" app:layout_column="2"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="6"
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:id="@+id/bt6"
                app:layout_row="2" app:layout_column="2"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="1"
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:id="@+id/bt1"
                app:layout_row="3" app:layout_column="0"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="8"
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:id="@+id/bt8"
                app:layout_row="1" app:layout_column="1"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="5"
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:id="@+id/bt5"
                app:layout_row="2" app:layout_column="1"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="4"
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:id="@+id/bt4"
                app:layout_row="2" app:layout_column="0"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="7"
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:id="@+id/bt7"
                app:layout_row="1" app:layout_column="0"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="0"
                android:layout_width="95dp"
                android:layout_height="65dp"
                android:id="@+id/bt0"
                app:layout_row="4" app:layout_column="1"
                android:textSize="18sp"
                android:background="@drawable/rounded_button2"/>
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>