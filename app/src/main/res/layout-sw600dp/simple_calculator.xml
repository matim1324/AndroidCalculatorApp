<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGreen"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="60dp" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="25dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/textView6" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"/>

    <androidx.gridlayout.widget.GridLayout
            android:layout_width="601dp"
            android:layout_height="770dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="332dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:columnCount="4"
            app:rowCount="5" app:layout_constraintHorizontal_bias="0.502">

        <Button
                android:text="+"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/bt_add"
                app:layout_row="2" app:layout_column="3"
                android:textSize="24sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="="
                android:textColor="@color/white"
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:id="@+id/bt_equal"
                app:layout_row="3" app:layout_column="3"
                app:layout_rowSpan="2"
                android:textSize="24sp"
                android:background="@drawable/rounded_button"/>
        <Button
                android:text="/"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/bt_div"
                app:layout_row="0" app:layout_column="1"
                android:textSize="24sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="BACK"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/bt_back"
                app:layout_row="0" app:layout_column="0"
                android:textSize="24sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/button29"
                app:layout_row="3" app:layout_column="2"
                android:textSize="24sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="+/-"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/bt_pm"
                app:layout_row="4" app:layout_column="0"
                android:textSize="24sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/bt2"
                app:layout_row="3" app:layout_column="1"
                android:textSize="24sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text=","
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/bt_dot"
                app:layout_row="4" app:layout_column="2"
                android:textSize="24sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="x"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/bt_mlp"
                app:layout_row="0" app:layout_column="2"
                android:textSize="24sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="C"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/bt_clr"
                app:layout_row="0" app:layout_column="3"
                android:textSize="24sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="-"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/bt_sub"
                app:layout_row="1" app:layout_column="3"
                android:textSize="24sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="9"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/bt9"
                app:layout_row="1" app:layout_column="2"
                android:textSize="24sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="6"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/bt6"
                app:layout_row="2" app:layout_column="2"
                android:textSize="24sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/bt1"
                app:layout_row="3" app:layout_column="0"
                android:textSize="24sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="8"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/bt8"
                app:layout_row="1" app:layout_column="1"
                android:textSize="24sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/bt5"
                app:layout_row="2" app:layout_column="1"
                android:textSize="24sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/bt4"
                app:layout_row="2" app:layout_column="0"
                android:textSize="24sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="7"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/bt7"
                app:layout_row="1" app:layout_column="0"
                android:textSize="24sp"
                android:background="@drawable/rounded_button2"/>
        <Button
                android:text="0"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/bt0"
                app:layout_row="4" app:layout_column="1"
                android:textSize="24sp"
                android:background="@drawable/rounded_button2"/>
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>